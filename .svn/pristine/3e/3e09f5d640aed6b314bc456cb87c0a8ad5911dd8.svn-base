@import "common";


//index.js use
.application_content {
  line-height:1;
  margin:10px auto;
  width:1200px;
  height:260px;
  border-radius: 8px;
  box-shadow: 2px 2px 4px #d7dae0;
  margin-bottom: 10px;
  overflow: hidden;
  .application_item{
    width:599px;
    height: 260px;
    text-align: left;
    background: #ffffff;
    transition: all 0.3s;
    -webkit-transition: all 0.3s;
    float: left;
    .tag-flag{
      display: inline-block;
      font-size: 12px;
      line-height: 20px;
      padding: 0 5px;
      border: 1px solid #1eae58;
      border-radius: 3px;
      vertical-align: middle;
    }
    .tag-date-limit{
      float:right;
      margin-top:30px;
      .red {
        font-family: arial;
        font-size: 30px;
        color: #ff5943;
        em {
          font-size: 16px;
          font-family: "微软雅黑";
        }
      }
    }
    sub {
      font-size: 24px;
      margin-left: 5px;
      bottom:0;
      vertical-align: baseline;
    }
    p{
      width:83%;
      display:block;
      margin-left:auto;
      margin-right:auto;
      padding-top:5px !important;
      font-size:20px;
      color:#333;
      margin-bottom:0;
    }
    strong{
      font-family: arial;
      font-size: 30px;
      color: #ff5943;
    }
    ul{
      width: 83%;
      display: block;
      margin-left: auto;
      margin-right: auto;
      font-size: 14px;
      color: #999999;
      text-align: left;
      margin-top: 0px !important;
      clear: both;
      zoom: 1;
      li {
        float: left;
        margin:0;
        padding:0;
      }
    }
    .block_hot {
      position: relative;
      height: 100px;
      table {
        width: 80%;
        margin: auto;
        border: honeydew 1px solid;
        text-align: center;
        tr,td {
          height: 45px;
          border: #eaeaea 1px solid;
        }
      }
    }
    .invest-tag-bottom{
      width: 83%;
      display: block;
      margin-left: auto;
      margin-right: auto;
      margin-top: 10px;
      .tag-progress{
        float:left;
        width:300px;
        height:25px;
        position:relative;
        top:5px;
        .tag-progress-bar{
          display:block;
          height:10px;
          background:#E4E4E4;
          left:0;
          position:absolute;
          top:50%;
          margin-top:-5px;
          width: 334px;
          overflow: hidden;
          .tag-progress-finished{
            display:block;
            width:0;
            height:100%;
            background:#1EAE58;
            position:absolute;
            left:0;
            top:0;
            transition:all 0.5s;
            -webkit-transition:all 0.5s;
          }
        }
        span{
          float:right;
          font-size:14px;
          line-height:25px;
          position: absolute;
          left: 340px;
        }
      }
    }
    .index_btn_issue:hover {
      color: white;
      background-color: #52e4cc;
      text-decoration: none;
    }
    .index_btn_licai:hover {
      color: white;
      background-color: #ac83af;
      text-decoration: none;
    }
    .index_btn_issue {
      float: right;
      margin-right: 9px;
      text-align: center;
      font-size: 14px;
      padding: 0 20px;
      /* width: 200px; */
      height: 34px;
      line-height: 34px;
      color: #FFF;
      cursor: pointer;
      border-radius: 4px;
      background-color: #17d0b1;
    }
    .index_btn_licai {
      float: right;
      margin-right: 9px;
      text-align: center;
      font-size: 14px;
      padding: 0 20px;
      /* width: 200px; */
      height: 34px;
      line-height: 34px;
      color: #FFF;
      cursor: pointer;
      border-radius: 4px;
      background-color: #825c85;
    }
  }
  .application_item:hover {
    box-shadow: 0px 0px 8px 0px rgba(0, 0, 0, 0.1) inset;
    transform: translate(0, -4px);
    -webkit-transform: translate(0, -4px);
  }
}
.index_news {
  width: 1200px;
  height: 370px;
  background: #fff;
  box-shadow: 2px 2px 4px #d7dae0;
  margin-left: auto;
  margin-right: auto;
  border-radius: 8px;
  .index_media {
    width: 682px;
    height: 360px;
    float: left;
    overflow: hidden;
    margin-left: 35px;
    margin-top: 20px;
    .index_media_ul {
      height: 55px;
      line-height: 55px;
      border-bottom: 1px solid #e6e6e6;
      .index_media_li {
        font-size: 18px;
        float: left;
        height: 55px;
        line-height: 55px;
        text-align: center;
      }
      .index_media_li1 {
        font-size: 14px;
        color: #ededed;
        color: #666;
        float: right;
        height: 55px;
        line-height: 55px;
        text-align: center;
        a {
          display: block;
          width: 100%;
          height: 100%;
          color: #666;
        }
      }
      li {
        text-indent: 10px;
        color: #4f94e7;
      }
    }
    .index_media_con {
      height: 305px;
      float: left;
      .index_media_tab {
        width: 700px;
        height: 305px;
        animation: mall-dy 0.7s;
        -webkit-animation: mall-dy 0.7s;
        overflow: hidden;
        .index_media_ul1 {
          height: 117px;
          margin-top: 13px;
          font-size: 14px;
          float: left;
          .index_media_span {
            width: 330px;
            height: 155px;
            display: block;
            float: left;
            overflow: hidden;
            position: relative;
            margin-left: 0;
            margin-right: 20px;
          }
          .index_media_li7 {
            width: 682px;
          }
          li {
            height: 30px;
            line-height: 30px;
            float: left;
          }
        }
      }
    }
  }
  .index_media1 {
    width: 410px;
    .index_media_ul3 {
      height: 35px;
      margin-top: 5px;
      li {
        height: 30px;
        line-height: 30px;
        float: left;
      }
      .index_media_li4 {
        width: 340px;
      }
    }
  }
}
label {
  color: #999;
  display: block;
  width: auto;
  float: right;
  font-size: 12px;
}
.index_media_gt {
  font-size: 13px;
  font-weight: bold;
  float: left;
  display: block;
  width: 18px;
  height: 30px;
  line-height: 30px;
  color: #4f94e7;
}
